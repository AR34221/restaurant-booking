<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Админка — FLAVOR</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/admin.css" />
</head>
<body>
  <%- include('../partials/header', { page: 'admin', user: user }) %>

  <main class="admin-dashboard admin-sections">
    <section class="admin-section bookings-section">
      <h2>Панель администратора</h2>
      <h3>Бронирования</h3>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Пользователь</th>
            <th>Стол</th>
            <th>Дата</th>
            <th>Время</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach(b => { %>
            <tr>
              <td><%= b.id %></td>
              <td><%= b.username %></td>
              <td><%= b.table_id %></td>
              <td><%= b.booking_date %></td>
              <td><%= b.booking_time %></td>
              <td>
                <form method="POST" action="/admin/bookings/delete" onsubmit="return confirm('Удалить это бронирование?');">
                  <input type="hidden" name="id" value="<%= b.id %>">
                  <button class="btn-danger">Удалить</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <section class="admin-section tables-section">
      <h3>Столы</h3>
      <form class="inline-form" method="POST" action="/admin/tables/add">
        <input type="number" name="seats" placeholder="Мест" required>
        <select name="location" required>
          <option value="Основной зал">Основной зал</option>
          <option value="Веранда">Веранда</option>
        </select>
        <button class="btn-primary">Добавить стол</button>
      </form>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Мест</th>
            <th>Зал</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% tables.forEach(t => { %>
            <tr>
              <form method="POST" action="/admin/tables/edit" class="inline-form">
                <td>
                  <%= t.id %>
                  <input type="hidden" name="id" value="<%= t.id %>">
                </td>
                <td><input type="number" name="seats" value="<%= t.seats %>" required></td>
                <td>
                  <select name="location">
                    <option value="Основной зал" <%= t.location === 'Основной зал' ? 'selected' : '' %>>Основной зал</option>
                    <option value="Веранда" <%= t.location === 'Веранда' ? 'selected' : '' %>>Веранда</option>
                  </select>
                </td>
                <td>
                  <button class="btn-primary">Сохранить</button>
              </form>
                  <form method="POST" action="/admin/tables/delete" onsubmit="return confirm('Удалить этот стол?');">
                    <input type="hidden" name="id" value="<%= t.id %>">
                    <button class="btn-danger">Удалить</button>
                  </form>
                </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <section class="admin-section users-section">
      <h3>Пользователи</h3>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Логин</th>
            <th>Email</th>
            <th>Роль</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.username %></td>
              <td><%= u.email %></td>
              <td><%= u.role %></td>
              <td>
                <form method="POST" action="/admin/users/delete" onsubmit="return confirm('Удалить пользователя?');">
                  <input type="hidden" name="id" value="<%= u.id %>">
                  <button class="btn-danger">Удалить</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
