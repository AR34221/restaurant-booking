<!-- server/views/pages/admin.ejs -->
<%- include('../partials/header', { page: 'admin', user: user }) %>

<main class="admin-dashboard">
  <h2>Панель администратора</h2>

  <!-- Бронирования -->
  <section class="admin-section">
    <h3>Бронирования</h3>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Пользователь</th>
          <th>Стол</th>
          <th>Дата</th>
          <th>Время</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(b => { %>
          <tr>
            <td><%= b.id %></td>
            <td><%= b.username %></td>
            <td><%= b.table_id %></td>
            <td><%= b.booking_date.toLocaleDateString('ru-RU') %></td>
            <td><%= b.booking_time %></td>
            <td>
              <form method="POST" action="/admin/bookings/delete" onsubmit="return confirm('Удалить это бронирование?');">
                <input type="hidden" name="id" value="<%= b.id %>">
                <button class="btn-danger">Удалить</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <!-- Столы -->
  <section class="admin-section">
    <h3>Столы</h3>
    <form class="inline-form" method="POST" action="/admin/tables/add">
      <input type="number" name="seats" placeholder="Мест" required>
      <input type="text" name="location" placeholder="Зал" required>
      <button class="btn-primary">Добавить стол</button>
    </form>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Мест</th>
          <th>Зал</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        <% tables.forEach(t => { %>
          <tr>
            <form method="POST" action="/admin/tables/edit" class="inline-form">
              <td>
                <%= t.id %>
                <input type="hidden" name="id" value="<%= t.id %>">
              </td>
              <td><input type="number" name="seats" value="<%= t.seats %>" required></td>
              <td><input type="text" name="location" value="<%= t.location %>" required></td>
              <td>
                <button class="btn-primary">Сохранить</button>
            </form>
                <form method="POST" action="/admin/tables/delete" onsubmit="return confirm('Удалить этот стол?');">
                  <input type="hidden" name="id" value="<%= t.id %>">
                  <button class="btn-danger">Удалить</button>
                </form>
              </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <!-- Пользователи -->
  <section class="admin-section">
    <h3>Пользователи</h3>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Логин</th>
          <th>Email</th>
          <th>Роль</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(u => { %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.username %></td>
            <td><%= u.email %></td>
            <td><%= u.role %></td>
            <td>
              <form method="POST" action="/admin/users/delete" onsubmit="return confirm('Удалить пользователя?');">
                <input type="hidden" name="id" value="<%= u.id %>">
                <button class="btn-danger">Удалить</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>
</main>

<%- include('../partials/footer') %>
